apiVersion: apps/v1
kind: Deployment
metadata:
  name: database
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: database
  template:
    metadata:
      labels:
        app: database
    spec:
      nodeSelector:
        cloud.google.com/gke-nodepool: database-pool
      containers:
      - name: database
        image: mysql:8
        env:
        - name: MYSQL_ALLOW_EMPTY_PASSWORD
          value: "true"
        - name: MYSQL_DATABASE
          value: {{ database_name }}
        - name: MYSQL_USER
          value: {{ database_user }}
        - name: MYSQL_PASSWORD
          value: "alberto"
        ports:
        - containerPort: {{ database_port }}
        volumeMounts:
          - name: database-persistent-storage
            mountPath: /var/lib/mysql
      volumes:
      - name: database-persistent-storage
        persistentVolumeClaim:
          claimName: database-pv-claim
